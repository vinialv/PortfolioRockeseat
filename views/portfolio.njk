{% extends "layout.njk" %}

{% block head %}
    <title>
        Portfolio - Vin√≠cius Alves</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {% endblock%}

    {% block content %}

        <div class="video">
            <h1>Classes</h1>
        </div>

        <section class="cards">

            {% for item in items %}
                <div class="card" id="{{item.id}}">
                    <div class="card_image-container {{'featured-wrapper' if item.featured}}">
                        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
                        {% if item.featured %}
                            <div class="featured">Featured</div>
                        {% endif %}
                    </div>
                    <div class="card_content">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="card_info">
                        <p>{{item.duration}}</p>
                        <div class="card_price">{{item.price}}</div>
                    </div>
                </div>
            {% endfor %}

        </section>

        <script src="/script.js"></script>

    {% endblock %}